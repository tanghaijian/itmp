<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.pioneeruniverse.project.dao.mybatis.assetLibrary.TblSystemDirectoryTemplateMapper">
  <resultMap id="BaseResultMap" type="cn.pioneeruniverse.project.entity.TblSystemDirectoryTemplate">
    <id column="ID" jdbcType="BIGINT" property="id" />
    <result column="PROJECT_TYPE" jdbcType="TINYINT" property="projectType" />
    <result column="directory_type" jdbcType="TINYINT" property="directoryType" />
    <result column="DIR_NAME" jdbcType="VARCHAR" property="dirName" />
    <result column="ORDER_NUMBER" jdbcType="TINYINT" property="orderNumber" />
    <result column="TIER_NUMBER" jdbcType="TINYINT" property="tierNumber" />
    <result column="DOCUMENT_TYPES" jdbcType="VARCHAR" property="documentTypes" />
    <result column="PARENT_ID" jdbcType="BIGINT" property="parentId" />
    <result column="PARENT_IDS" jdbcType="VARCHAR" property="parentIds" />
    <result column="DOCUMENT_TYPE2S" jdbcType="VARCHAR" property="documentType2s" />
    <result column="STATUS" jdbcType="TINYINT" property="status" />
    <result column="CREATE_BY" jdbcType="BIGINT" property="createBy" />
    <result column="CREATE_DATE" jdbcType="TIMESTAMP" property="createDate" />
    <result column="LAST_UPDATE_BY" jdbcType="BIGINT" property="lastUpdateBy" />
    <result column="LAST_UPDATE_DATE" jdbcType="TIMESTAMP" property="lastUpdateDate" />
  </resultMap>
  
  <sql id="Base_Column_List">
  	ID, PROJECT_TYPE,directory_type, DIR_NAME, ORDER_NUMBER, TIER_NUMBER, PARENT_ID, PARENT_IDS, DOCUMENT_TYPES, STATUS,
  	CREATE_BY, CREATE_DATE, LAST_UPDATE_BY, LAST_UPDATE_DATE
  </sql>
  
  <!-- 获取某种项目类型（1运维类，2新建类）下的项目类型的文档模板 -->
  <select id="getAllSystemDirectoryTemplate" parameterType="java.lang.Integer" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List" />
  		from tbl_system_directory_template where STATUS = 1 and PROJECT_TYPE = #{projectType} and directory_type = 1
  </select>

</mapper>